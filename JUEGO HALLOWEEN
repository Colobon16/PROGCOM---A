        .contenedor {
            width: 950px;
            max-width: 98%;
            display: flex;
            gap: 15px;
        }

        .juego {
            flex: 1;
            background: #12151f;
            padding: 12px;
            border-radius: 10px;
        }

        .lateral {
            width: 280px;
            background: #101722;
            padding: 12px;
            border-radius: 10px;
        }

        canvas {
            background: linear-gradient(#112033, #090f1d);
            display: block;
            margin: auto;
            border-radius: 6px;
        }

        .barra {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
