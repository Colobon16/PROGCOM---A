<body>

    <div class="contenedor">

        <div class="juego">
            <h2>ðŸŽƒ Juego Halloween â€“ Recoge Dulces</h2>

            <div class="barra">
                <div>
                    <span class="dato">Puntos: <span id="score">0</span></span>
                    <span class="dato">Vidas: <span id="lives">3</span></span>
                    <span class="dato">Tiempo: <span id="timer">0</span>s</span>
                </div>
                <div>
                    <button id="btnPause">Pausar</button>
                    <button id="btnRestart" class="sec">Reiniciar</button>
                </div>
            </div>

            <p class="nota">Mover con flechas o WASD</p>

            <canvas id="game" width="640" height="360"></canvas>

            <div style="display:flex; gap:8px; margin-top:10px;">
                <button id="btnMusic">MÃºsica ON/OFF</button>
                <button id="btnVoice" class="sec">Voz ON/OFF</button>
            </div>

            <p class="nota">Autor: (pon tu nombre)</p>
        </div>

        <!-- Panel lateral -->
        <div class="lateral">

            <h3>Reglas</h3>
            <p class="nota">
                â€¢ Dulces verdes = +10 pts <br>
                â€¢ Evita fantasmas (azules) y zombies (rojos) <br>
                â€¢ Dulce amarillo = invencible unos segundos
            </p>

            <h3>Historial</h3>
            <ul id="log"></ul>

            <h3>Ranking</h3>
            <ol id="ranking"></ol>
        </div>

    </div>

    <!-- MÃºsica (puedes cambiar el mp3 si quieres) -->
    <audio id="bgMusic" loop>
        <source src="https://www.bensound.com/bensound-music/bensound-scifi.mp3" type="audio/mpeg">
    </audio>

    <script>
        const canvas = document.getElementById("game");
        const ctx = canvas.getContext("2d");
        const W = canvas.width, H = canvas.height;

        // HUD
        let score = 0;
        let lives = 3;
        let time = 0;
        let running = true;

        let invencible = false;
        let invTime = 0;

        const scoreEl = document.getElementById("score");
        const livesEl = document.getElementById("lives");
        const timerEl = document.getElementById("timer");
        const logEl = document.getElementById("log");
        const rankEl = document.getElementById("ranking");

        const music = document.getElementById("bgMusic");
        music.volume = 0.25;
        music.play().catch(() => { });

        let voiceOn = true;

        // Jugador
        const player = {
            x: 60,
            y: H / 2 - 16,
            w: 28,
            h: 32,
            speed: 3,
            color: "#7fe66c"
        };

        // Objetos del juego
        let dulces = [];
        let enemigos = [];
        let especiales = [];

        const teclas = {};
        window.addEventListener("keydown", e => teclas[e.key.toLowerCase()] = true);
        window.addEventListener("keyup", e => teclas[e.key.toLowerCase()] = false);

        // Temporizadores
        setInterval(() => {
            if (running) {
                time++;
                timerEl.textContent = time;
            }
        }, 1000);

        setInterval(() => { if (running) crearDulce(); }, 1000);
        setInterval(() => { if (running) crearEnemigo(); }, 1800);
        setInterval(() => { if (running && Math.random() < 0.08) crearEspecial(); }, 4000);

        /* --------------------- FUNCIONES DEL JUEGO --------------------- */

        function moverJugador() {
            if (teclas["arrowup"] || teclas["w"]) player.y -= player.speed;
            if (teclas["arrowdown"] || teclas["s"]) player.y += player.speed;
            if (teclas["arrowleft"] || teclas["a"]) player.x -= player.speed;
            if (teclas["arrowright"] || teclas["d"]) player.x += player.speed;

            player.x = Math.max(0, Math.min(W - player.w, player.x));
            player.y = Math.max(0, Math.min(H - player.h, player.y));
        }

        function crearDulce() {
            if (dulces.length < 7) {
                dulces.push({
                    x: W + 20,
                    y: Math.random() * (H - 20) + 5,
                    w: 14, h: 14,
                    speed: 2 + Math.random()
                });
            }
        }

        function crearEnemigo() {
            if (enemigos.length < 6) {
                const tipo = Math.random() < 0.6 ? "ghost" : "zombie";
                enemigos.push({
                    x: W + 30,
                    y: Math.random() * (H - 30) + 5,
                    w: 28, h: 28,
                    tipo,
                    speed: tipo === "ghost" ? 1.7 + Math.random() : 1 + Math.random()
                });
            }
        }

        function crearEspecial() {
            especiales.push({
                x: W + 20,
                y: Math.random() * (H - 20) + 5,
                w: 16, h: 16,
                speed: 2.2,
                t: 100
            });
        }

        function colision(a, b) {
            return !(
                a.x + a.w < b.x ||
                a.x > b.x + b.w ||
                a.y + a.h < b.y ||
                a.y > b.y + b.h
            );
        }

        function actualizarObjetos() {
            dulces.forEach(d => d.x -= d.speed);
            dulces = dulces.filter(d => d.x > -20);

            enemigos.forEach(e => {
                e.x -= e.speed;
                if (e.y < player.y) e.y += 0.5;
                else e.y -= 0.5;
            });
            enemigos = enemigos.filter(e => e.x > -30);

            especiales.forEach(s => { s.x -= s.speed; s.t--; });
            especiales = especiales.filter(s => s.x > -20 && s.t > 0);
        }

        function dibujar() {
            ctx.clearRect(0, 0, W, H);

            // Jugador
            ctx.fillStyle = player.color;
            ctx.fillRect(player.x, player.y, player.w, player.h);

            // Dulces
            dulces.forEach(d => {
                ctx.fillStyle = "#7fffd4";
                ctx.fillRect(d.x, d.y, d.w, d.h);
            });

            // Especial
            especiales.forEach(s => {
                ctx.fillStyle = "#ffd166";
                ctx.fillRect(s.x, s.y, s.w, s.h);
            });

            // Enemigos
            enemigos.forEach(e => {
                ctx.fillStyle = (e.tipo === "ghost") ? "#6aa8ff" : "#ff6b6b";
                ctx.fillRect(e.x, e.y, e.w, e.h);
            });

            if (invencible) {
                ctx.fillStyle = "rgba(255,255,0,0.1)";
                ctx.fillRect(0, 0, W, H);
            }
        }

        function revisarChoques() {
            // dulces
            for (let i = dulces.length - 1; i >= 0; i--) {
                if (colision(player, dulces[i])) {
                    score += 10;
                    scoreEl.textContent = score;
                    agregarLog("Dulce +10");
                    dulces.splice(i, 1);
                }
            }

            // especiales
            for (let i = especiales.length - 1; i >= 0; i--) {
                if (colision(player, especiales[i])) {
                    invencible = true;
                    invTime = 100;
                    agregarLog("Invencible unos segundos");
                    especiales.splice(i, 1);
                }
            }

            // enemigos
            for (let i = enemigos.length - 1; i >= 0; i--) {
                if (colision(player, enemigos[i])) {
                    if (!invencible) {
                        lives--;
                        livesEl.textContent = lives;
                        agregarLog("Choque, -1 vida");

                        if (lives <= 0) {
                            gameOver();
                            return;
                        }
                    } else {
                        agregarLog("Golpeaste enemigo (+5)");
                        score += 5;
                        scoreEl.textContent = score;
                    }
                    enemigos.splice(i, 1);
                }
            }
        }

        function agregarLog(txt) {
            const li = document.createElement("li");
            li.textContent = txt;
            logEl.prepend(li);
        }

        function gameOver() {
            running = false;
            agregarLog("GAME OVER");
            guardarRanking();
            setTimeout(() => {
                alert("Juego terminado. Puntaje: " + score);
            }, 100);
        }

        function guardarRanking() {
            const key = "rank_halloween";
            const arr = JSON.parse(localStorage.getItem(key) || "[]");

            arr.push({ puntos: score, tiempo: time });
            arr.sort((a, b) => b.puntos - a.puntos);

            const top = arr.slice(0, 5);
            localStorage.setItem(key, JSON.stringify(top));

            mostrarRanking();
        }

        function mostrarRanking() {
            const key = "rank_halloween";
            const arr = JSON.parse(localStorage.getItem(key) || "[]");

            rankEl.innerHTML = "";
            arr.forEach(r => {
                const li = document.createElement("li");
                li.textContent = `${r.puntos} pts â€“ ${r.tiempo}s`;
                rankEl.appendChild(li);
            });
        }

        function loop() {
            if (running) {
                moverJugador();
                actualizarObjetos();
                revisarChoques();
                dibujar();

                if (invencible) {
                    invTime--;
                    if (invTime <= 0) invencible = false;
                }
            }
            requestAnimationFrame(loop);
        }

        mostrarRanking();
        loop();

        /* ---------------- BOTONES ---------------- */

        document.getElementById("btnPause").onclick = () => {
            running = !running;
        };

        document.getElementById("btnRestart").onclick = () => {
            location.reload();
        };

        document.getElementById("btnMusic").onclick = () => {
            if (music.paused) music.play();
            else music.pause();
        };

        document.getElementById("btnVoice").onclick = () => {
            voiceOn = !voiceOn;
        };
    </script>

</body>
</html>
